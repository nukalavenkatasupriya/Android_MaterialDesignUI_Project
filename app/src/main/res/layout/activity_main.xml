<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#4CAF50"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="NUKALA VENKATA SUPRIYA"
        android:textAllCaps="true"
        android:textColor="#E91E63"
        android:textSize="22sp"
        android:textStyle="bold"
        app:fontFamily="@font/abril_fatface" />
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:src="@drawable/babe"/>
    <EditText
        android:background="@drawable/shape"
        android:drawableLeft="@drawable/username"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint=" Enter Your User Name"
        android:textColorHint="#6200EE"
        android:layout_margin="20dp"/>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:counterMaxLength="10"
        app:passwordToggleEnabled="true">
        <EditText
            android:background="@drawable/shape"
            android:layout_margin="20dp"
            android:drawableLeft="@drawable/lock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=" Enter Your Password"
            android:inputType="number"
            android:maxLength="5"
            android:textColorHint="#CF0422"/>

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_baseline_check_box_24"
            android:layout_gravity="center"
            />


    </com.google.android.material.textfield.TextInputLayout>

</LinearLayout>